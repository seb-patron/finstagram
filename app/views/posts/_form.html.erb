

<div class='section'>
     <%= simple_form_for @post do |f| %>
     <div class="field">
          <div class='control'>
               <%= f.input :caption, input_html: {class: 'input'}, wrapper: false, label_html: {class: 'label'} %>
          </div>
     </div>

     <div class="field">
          <div class='control'>
               <%= f.file_field :image %>
          </div>
     </div>
     <%= f.button :submit, 'share', class: 'button-is-primary' %>
     <% end %>
</section>
