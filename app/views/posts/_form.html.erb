
<section class="tc pa3   pt4">
  <article class="hide-child relative ba b--black-20 mw6 center bg-white pt2 br3" style="max-width: 500px">
     
          <%= simple_form_for @post do |f| %>

          

          <div class="field">
               <div class='control'>
                    <%= f.file_field :image %>
               </div>
          </div>


          <div class="field">
               <div class='control'>
                    <%= f.input :caption, input_html: {class: 'input br3 bg-white'}, wrapper: false, label_html: {class: 'label'} %>
               </div>
          </div>


          <%= f.button :submit, 'share', class: 'button-is-primary white b--light-gray br3 bg-green' %>
          <% end %>
       </article>
</section>
